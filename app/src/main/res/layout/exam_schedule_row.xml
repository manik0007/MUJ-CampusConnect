<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/exam_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Date"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/exam_courseID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exam_date"
                android:layout_marginStart="26dp"
                android:layout_marginTop="23dp"
                android:text="CourseID"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/exam_courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/exam_courseID"
                android:layout_alignBottom="@+id/exam_courseID"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:text="CourseName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/exam_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exam_courseID"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="24dp"
                android:text="TIme"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/exam_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/exam_time"
                android:layout_alignBottom="@+id/exam_time"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/exam_courseID"
                android:text="Venue"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/exam_invigilator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/exam_venue"
                android:layout_alignBottom="@+id/exam_venue"
                android:layout_alignEnd="@+id/exam_courseName"
                android:layout_marginEnd="6dp"
                android:text="Invigilator"
                android:textSize="19sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
